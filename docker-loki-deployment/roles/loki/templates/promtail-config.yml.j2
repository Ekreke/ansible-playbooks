server:
  http_listen_port: 9080

clients:
  - url: http://localhost:3100/loki/api/v1/push

positions:
  filename: /etc/promtail/promtail-positions.yaml

scrape_configs:
  - job_name: system
    static_configs:
      - targets:
          - {{ promtail_targets | join(",") }}
        labels:
          job: system
          host: "{{ inventory_hostname }}"
